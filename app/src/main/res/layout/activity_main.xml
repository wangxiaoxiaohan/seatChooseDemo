<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.lhd.seatchoosedemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_centerVertical="true"
                android:id="@+id/scpoeImage"
                android:layout_alignParentLeft="true"
                android:src="@drawable/scope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/scpoeImage"
                android:text="范围"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
          android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="夹角度数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="80°"
            android:layout_gravity="center_horizontal"
            android:textSize="65sp"
            android:id="@+id/angleText"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatSeekBar
            android:progressDrawable="@drawable/seekbarprogress"
            android:thumb="@drawable/seekbarthumb"
            android:layout_margin="15dp"
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="0"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="90"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="180"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

         <ImageView
             android:src="@drawable/car_seat"
             android:layout_width="match_parent"
             android:layout_height="match_parent" />
        <com.example.lhd.seatchoosedemo.sectorView

            android:id="@+id/cccc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_mirror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
